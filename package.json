{
	"name": "scss-reminder",
	"description": "A Scss VSCode Extension",
	"displayName": "SCSS Reminder",
	"author": "patrickli147",
	"icon": "images/logo.png",
	"license": "MIT",
	"version": "1.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/patrickli147/scss-reminder"
	},
	"publisher": "patrickli147",
	"categories": [],
	"keywords": [
		"scss css reminder variables"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "SCSS-Reminder configuration",
			"properties": {
				"scssReminder.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 1000,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"scssReminder.sourceFiles": {
					"scope": "resource",
					"type": "array",
					"description": "Controls the source files."
				},
				"scssReminder.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "scssReminder.addSourceFile",
				"title": "Add file"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typedoc": "^0.21.9",
		"typescript": "^4.3.5"
	}
}
